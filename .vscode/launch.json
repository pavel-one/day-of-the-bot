{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Bot (with .env)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env.development",
            "args": [],
            "showLog": true,
            "trace": "verbose"
        },
        {
            "name": "Launch Bot (manual config)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "env": {
                "BOT_TOKEN": "YOUR_BOT_TOKEN_HERE",
                "DB_PATH": "bot.db",
                "DEBUG": "true"
            },
            "args": [],
            "showLog": true,
            "trace": "verbose"
        },
        {
            "name": "Launch Bot (Production)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "env": {
                "BOT_TOKEN": "${env:BOT_TOKEN}",
                "DB_PATH": "${env:DB_PATH}",
                "DEBUG": "${env:DEBUG}"
            },
            "args": [],
            "showLog": false
        },
        {
            "name": "Debug Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "env": {
                "DB_PATH": "test.db"
            },
            "args": [
                "-test.v"
            ],
            "showLog": true
        },
        {
            "name": "Debug Tests (with .env)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env.development",
            "env": {
                "DB_PATH": "test.db"
            },
            "args": [
                "-test.v"
            ],
            "showLog": true
        },
        {
            "name": "Attach to running process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "${command:pickProcess}"
        }
    ]
}